<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessMobile.RegisterPage"
             Title="Create Account"
             BackgroundColor="#f0f2f5">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="30" VerticalOptions="Center">

            <Label Text="Join Us!" 
                   FontSize="32" 
                   FontAttributes="Bold" 
                   TextColor="#0d6efd" 
                   HorizontalOptions="Center" 
                   Margin="0,0,0,20"/>

            <!-- Nume -->
            <Entry x:Name="FirstNameEntry" Placeholder="First Name" />
            <Entry x:Name="LastNameEntry" Placeholder="Last Name" />

            <!-- Contact -->
            <Entry x:Name="PhoneEntry" Placeholder="Phone Number" Keyboard="Telephone" />
            <Entry x:Name="EmailEntry" Placeholder="Email Address" Keyboard="Email" />

            <!-- Parola -->
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
            <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True" />

            <!-- Butoane -->
            <Button Text="REGISTER" 
                    BackgroundColor="#198754" 
                    HeightRequest="50" 
                    Clicked="OnRegisterButtonClicked" 
                    Margin="0,20,0,0"/>

            <Button Text="Cancel" 
                    BackgroundColor="Transparent" 
                    TextColor="Gray" 
                    Clicked="OnCancelClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
