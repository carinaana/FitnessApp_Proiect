<Shell
    x:Class="FitnessMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FitnessMobile"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Trainers" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate local:TrainersPage}" />
        </Tab>
        <Tab Title="Workouts" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate local:WorkoutsPage}" />
        </Tab>
        <Tab Title="Schedule" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate local:SessionsPage}" />
        </Tab>
        <Tab Title="Profile" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate local:ProfilePage}" />
        </Tab>
    </TabBar>

</Shell>
