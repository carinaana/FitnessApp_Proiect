<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessMobile.SessionsPage"
             Title="Available Sessions">
    <CollectionView x:Name="SessionsList">
        <CollectionView.EmptyView>
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10" Padding="30">
                <Label Text="No session avalaible." 
                 FontAttributes="Bold" 
                 FontSize="18" 
                 HorizontalOptions="Center"
                TextColor="Gray"/>
                <Label Text="There are currently no classes scheduled for this workout." 
                HorizontalOptions="Center" 
                TextColor="Silver"
                 HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>
        </CollectionView.EmptyView>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="10">
                    <Grid ColumnDefinitions="*, Auto">
                        <VerticalStackLayout>
                            <Label Text="{Binding Date, StringFormat='{0:dd MMM yyyy}'}" FontAttributes="Bold" />
                            <Label Text="{Binding StartTime, StringFormat='Time: {0}'}" />
                            <Label Text="{Binding TrainerName, StringFormat='Trainer: {0}'}" />
                            <Label Text="{Binding WorkoutName, StringFormat='Workout: {0}'}" />
                            <Label Text="{Binding AvailableSpots, StringFormat='Spots left: {0}'}" TextColor="Green" />
                        </VerticalStackLayout>

                        <Button Grid.Column="1" Text="BOOK" 
                                CommandParameter="{Binding .}"
                                Clicked="OnBookClicked" 
                                HeightRequest="40" VerticalOptions="Center"/>
                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
