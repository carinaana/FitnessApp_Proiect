@page
@model FitnessWeb.Pages.WorkoutTypes.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="mb-0">Confirm Delete</h4>
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title text-danger mb-3">Are you sure you want to delete this workout type?</h5>
                    <p class="card-text text-muted">
                        This action cannot be undone.
                    </p>

                    <div class="text-start bg-light p-3 rounded mb-4">
                        <p class="mb-1"><strong>Name:</strong> @Model.WorkoutType.Name</p>
                        <p class="mb-0"><strong>Difficulty:</strong> @Model.WorkoutType.Difficulty</p>
                    </div>

                    <form method="post">
                        <input type="hidden" asp-for="WorkoutType.ID" />
                        <div class="d-flex justify-content-center gap-3">
                            <a asp-page="./Index" class="btn btn-outline-secondary px-4">Cancel</a>
                            <input type="submit" value="Delete Permanently" class="btn btn-danger px-4" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>