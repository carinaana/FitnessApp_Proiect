@page
@model FitnessWeb.Pages.Trainers.CreateModel

@{
    ViewData["Title"] = "Add Trainer";
}

<hr />
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h4 class="mb-0 text-primary">Add new Trainer</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Trainer.FullName" class="control-label fw-bold">Full Name</label>
                            <input asp-for="Trainer.FullName" class="form-control" />
                            <span asp-validation-for="Trainer.FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label fw-bold mb-2">Specializations (Select multiple)</label>
                            <div class="card p-2 bg-light" style="max-height: 150px; overflow-y: auto;">
                                <table class="table table-borderless table-sm mb-0">
                                    @for (int i = 0; i < Model.AssignedSpecializationDataList.Count; i++)
                                    {
                                        <tr>
                                            <td>
                                                <input type="checkbox"
                                                       name="selectedSpecializations"
                                                       value="@Model.AssignedSpecializationDataList[i].WorkoutTypeID"
                                                       @(Html.Raw(Model.AssignedSpecializationDataList[i].Assigned ? "checked=\"checked\"" : "")) />
                                                @Model.AssignedSpecializationDataList[i].Name
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Trainer.Email" class="control-label fw-bold">Email (Login)</label>
                            <input asp-for="Trainer.Email" class="form-control" />
                            <span asp-validation-for="Trainer.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label class="control-label fw-bold">Password for Account</label>
                            <input type="password" name="Password" class="form-control" />
                        </div>

                        <div class="form-group d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-outline-secondary">Return</a>
                            <input type="submit" value="Create" class="btn btn-primary px-4" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
