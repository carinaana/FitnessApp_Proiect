@page
@model FitnessWeb.Pages.Trainers.IndexModel
@{
    ViewData["Title"] = "Trainers";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">List of our Trainers</h2>
        <a asp-page="Create" class="btn btn-success shadow-sm">
            <span class="fw-bold">+</span> Add Trainer
        </a>
    </div>

    <div class="card shadow-sm border-0 mb-4 bg-light">
        <div class="card-body py-3">
            <form method="get" class="row g-3 align-items-center">
                <div class="col-auto">
                    <label class="fw-bold text-secondary">Filtrează după Specializare:</label>
                </div>
                <div class="col-auto">
                    <select asp-for="SelectedSpecializationID" asp-items="Model.SpecializationsList" class="form-select border-primary" onchange="this.form.submit()">
                        <option value="">-- Toate Specializările --</option>
                    </select>
                </div>
                <div class="col-auto">
                    @if (Model.SelectedSpecializationID.HasValue)
                    {
                        <a asp-page="./Index" class="btn btn-outline-secondary btn-sm">Resetează Filtrele</a>
                    }
                </div>
            </form>
        </div>
    </div>


    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="py-3 ps-4">Name</th>
                            <th class="py-3">Specialization</th>
                            <th class="py-3">Email</th>
                            <th class="py-3 text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Trainer)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>
                                    @if (item.TrainerSpecializations != null)
                                    {
                                        @foreach (var spec in item.TrainerSpecializations)
                                        {
                                            <span class="badge bg-info text-dark me-1">@spec.WorkoutType.Name</span>
                                        }
                                    }
                                </td>
                                <td class="text-muted">
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-sm btn-outline-warning" title="Editează">Edit</a>
                                        <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary" title="Detalii">Details</a>
                                        <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-sm btn-outline-danger" title="Șterge">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @if (!Model.Trainer.Any())
                {
                    <div class="text-center py-5 text-muted">
                        <p class="mb-0">No trainers found for this filter.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>