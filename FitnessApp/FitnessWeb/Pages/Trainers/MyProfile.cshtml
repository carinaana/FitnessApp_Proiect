@page
@model FitnessWeb.Pages.Trainers.MyProfileModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-top border-primary border-3">
                <div class="card-body">
                    <h3 class="card-title mb-4">My Profile</h3>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Trainer.ID" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Trainer.FullName" class="control-label text-muted">Full Name</label>
                                <input asp-for="Trainer.FullName" class="form-control bg-light" readonly />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Trainer.Email" class="control-label text-muted">Email</label>
                                <input asp-for="Trainer.Email" class="form-control bg-light" readonly />
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="card p-2 bg-light">
                                <table class="table table-borderless table-sm mb-0">
                                    @foreach (var spec in Model.AssignedSpecializationDataList)
                                    {
                                        <tr>
                                            <td>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox"
                                                           name="selectedSpecializations"
                                                           value="@spec.WorkoutTypeID"
                                                           @(Html.Raw(spec.Assigned ? "checked=\"checked\"" : "")) />
                                                    <label class="form-check-label">@spec.Name</label>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </table>

                        <div class="form-group mb-4">
                            <label asp-for="Trainer.Description" class="control-label fw-bold">Description</label>
                            <textarea asp-for="Trainer.Description" class="form-control" rows="5" placeholder="Write here something about you..."></textarea>
                            <span asp-validation-for="Trainer.Description" class="text-danger"></span>
                        </div>

                        <div class="form-group text-end">
                            <input type="submit" value="Actualizează Profilul" class="btn btn-primary px-4" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}