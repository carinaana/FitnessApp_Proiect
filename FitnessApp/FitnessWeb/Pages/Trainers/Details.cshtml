@page
@model FitnessWeb.Pages.Trainers.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h4 class="mb-0 text-primary">About @Model.Trainer.FullName</h4>
                </div>

                <div class="card-body">
                    <div class="form-group mb-3">
                        <label class="control-label fw-bold">Full Name</label>
                        <input value="@Model.Trainer.FullName" class="form-control bg-light" readonly />
                    </div>

                    <div class="form-group mb-3">
                        <label class="control-label fw-bold">Specializations</label>
                        <div class="bg-light p-3 rounded border">
                            @if (Model.Trainer.TrainerSpecializations != null && Model.Trainer.TrainerSpecializations.Any())
                            {
                                @foreach (var spec in Model.Trainer.TrainerSpecializations)
                                {
                                    <span class="badge bg-primary fs-6 me-1 mb-1">@spec.WorkoutType.Name</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted fst-italic">No specializations assigned.</span>
                            }
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label class="control-label fw-bold">Email</label>
                        <input value="@Model.Trainer.Email" class="form-control bg-light" readonly />
                    </div>

                    <div class="form-group mb-4">
                        <label class="control-label fw-bold">Description</label>
                        <textarea class="form-control bg-light" rows="4" readonly>@Model.Trainer.Description</textarea>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-page="./Index" class="btn btn-outline-secondary">Return</a>

                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-page="./Edit" asp-route-id="@Model.Trainer.ID" class="btn btn-primary px-4">Edit Profile</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>