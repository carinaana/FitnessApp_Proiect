@page
@model FitnessWeb.Pages.Trainers.DetailsModel
@{
    ViewData["Title"] = "Details";

    double averageRating = 0;
    int reviewCount = 0;
    if (Model.Trainer.Reviews != null && Model.Trainer.Reviews.Any())
    {
        averageRating = Model.Trainer.Reviews.Average(r => r.Rating);
        reviewCount = Model.Trainer.Reviews.Count;
    }
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">

                <div class="card-header bg-white border-bottom py-3">
                    <h4 class="mb-0 text-primary">About @Model.Trainer.FullName</h4>
                </div>

                <div class="card-body p-4">

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="control-label fw-bold text-muted small">Full Name</label>
                                <input value="@Model.Trainer.FullName" class="form-control bg-light" readonly />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="control-label fw-bold text-muted small">Email</label>
                                <input value="@Model.Trainer.Email" class="form-control bg-light" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <label class="control-label fw-bold text-muted small">Specializations</label>
                        <div class="bg-light p-3 rounded border">
                            @if (Model.Trainer.TrainerSpecializations != null && Model.Trainer.TrainerSpecializations.Any())
                            {
                                @foreach (var spec in Model.Trainer.TrainerSpecializations)
                                {
                                    <span class="badge bg-primary fs-6 me-1">@spec.WorkoutType.Name</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted fst-italic">No specializations assigned.</span>
                            }
                        </div>
                    </div>

                    <div class="d-flex align-items-center mb-4 p-3 bg-light rounded border-start border-4 border-warning">
                        <h5 class="mb-0 me-3 text-dark">Overall Rating:</h5>
                        @if (reviewCount > 0)
                        {
                            <span class="fs-4 text-warning fw-bold me-2">@averageRating.ToString("0.0")</span>
                            <span class="text-warning me-2" style="font-size: 1.2rem;">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= Math.Round(averageRating))
                                    {
                                        <span>★</span>
                                    }
                                    else
                                    {

                                        <span>☆</span>
                                    }
                                }
                            </span>
                            <span class="text-muted small">(@reviewCount reviews)</span>
                        }
                        else
                        {
                            <span class="text-muted fst-italic">No ratings yet.</span>
                        }
                    </div>

                    <div class="form-group mb-5">
                        <label class="control-label fw-bold text-muted small">Description</label>
                        <textarea class="form-control bg-light" rows="4" readonly>@Model.Trainer.Description</textarea>
                    </div>

                    <hr class="my-4">

                    <h5 class="text-primary mb-3">Client Reviews</h5>

                    @if (reviewCount > 0)
                    {
                        <div class="vstack gap-3 mb-4">
                            @foreach (var review in Model.Trainer.Reviews)
                            {
                                <div class="card border border-light shadow-sm">
                                    <div class="card-body py-2 px-3">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h6 class="fw-bold mb-0 text-dark">@review.MemberName</h6>
                                            <small class="text-muted" style="font-size: 0.8rem;">@review.Date.ToShortDateString()</small>
                                        </div>
                                        <div class="text-warning small mb-1">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= review.Rating)
                                                {
                                                    <span>★</span>
                                                }
                                                else
                                                {

                                                    <span>☆</span>
                                                }
                                            }
                                        </div>
                                        <p class="mb-0 text-secondary fst-italic small">"@review.Comment"</p>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-secondary text-center py-3 mb-4" role="alert">
                            <i class="bi bi-info-circle"></i> There are no reviews for this trainer yet.
                            <br><small>Reviews can be added on our mobile app.</small>
                        </div>
                    }

                    <div class="d-flex justify-content-between">
                        <a asp-page="./Index" class="btn btn-outline-secondary px-4">Return</a>

                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-page="./Edit" asp-route-id="@Model.Trainer.ID" class="btn btn-primary px-4">Edit Profile</a>
                        }
                    </div>

                </div> 
            </div> 
        </div>
    </div>
</div>