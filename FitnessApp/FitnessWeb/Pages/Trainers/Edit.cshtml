@page
@model FitnessWeb.Pages.Trainers.EditModel
@{
    ViewData["Title"] = "Edit Trainer";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h4 class="mb-0 text-warning">Edit</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Trainer.ID" />

                        <div class="form-group mb-3">
                            <label asp-for="Trainer.FullName" class="control-label fw-bold">Full Name</label>
                            <input asp-for="Trainer.FullName" class="form-control" />
                            <span asp-validation-for="Trainer.FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label fw-bold mb-2">Specializări</label>
                            <div class="card p-2 bg-light" style="max-height: 150px; overflow-y: auto;">
                                <table class="table table-borderless table-sm mb-0">
                                    @foreach (var spec in Model.AssignedSpecializationDataList)
                                    {
                                        <tr>
                                            <td>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox"
                                                           name="selectedSpecializations"
                                                           value="@spec.WorkoutTypeID"
                                                           @(Html.Raw(spec.Assigned ? "checked=\"checked\"" : "")) />
                                                    <label class="form-check-label">@spec.Name</label>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Trainer.Email" class="control-label fw-bold">Email</label>
                            <input asp-for="Trainer.Email" class="form-control" />
                            <span asp-validation-for="Trainer.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group d-flex justify-content-between">
                            <a asp-page="./Index" class="btn btn-outline-secondary">Return</a>
                            <input type="submit" value="Salvează" class="btn btn-warning px-4 text-white" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}