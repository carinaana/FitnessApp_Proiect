@model FitnessWeb.Pages.Sessions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Session[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session[0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session[0].DurationMinutes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session[0].MaxCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session[0].Trainer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session[0].WorkoutType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Session) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DurationMinutes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trainer.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkoutType.ID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
