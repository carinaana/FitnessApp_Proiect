@page
@model FitnessWeb.Pages.Sessions.DetailsModel
@{
    ViewData["Title"] = "Session Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h4 class="mb-0 text-primary">Class Details</h4>
                </div>
                <div class="card-body">

                    <div class="row mb-3">
                        <div class="col-6">
                            <label class="fw-bold text-muted small">DATE</label>
                            <p class="fs-5">@Model.Session.Date.ToShortDateString()</p>
                        </div>
                        <div class="col-6">
                            <label class="fw-bold text-muted small">TIME</label>
                            <p class="fs-5">@Model.Session.StartTime</p>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label class="control-label fw-bold">Workout</label>
                        <input value="@Model.Session.WorkoutType.Name" class="form-control bg-light" readonly />
                    </div>

                    <div class="form-group mb-3">
                        <label class="control-label fw-bold">Trainer</label>
                        <input value="@Model.Session.Trainer.FullName" class="form-control bg-light" readonly />
                    </div>

                    <div class="form-group mb-4">
                        <label class="control-label fw-bold">Total Capacity</label>
                        <input value="@Model.Session.MaxCapacity people" class="form-control bg-light" readonly />
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-page="./Index" class="btn btn-outline-secondary">Back to Schedule</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-page="./Edit" asp-route-id="@Model.Session.ID" class="btn btn-primary px-4">Edit</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>